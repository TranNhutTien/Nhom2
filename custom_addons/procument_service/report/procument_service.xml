<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_procument_service_id">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <h2 class="text-center">
                            <span>Procument Service Detail</span>
                        </h2>
                        <br/>
                        <h3 class="text-left">
                            <span t-field="o.name"/>
                        </h3>
                        <table>
                            <thead>
                                <tr>
                                    <th class="text-left">
                                        <h4>Customer:</h4>
                                    </th>
                                    <th class="text-left">
                                        <h4 t-field="o.customer_id" />
                                    </th>
                                </tr>
                                <tr>
                                    <td class="text-left">
                                        <h4>Vendor: </h4>
                                    </td>
                                    <td class="text-left">
                                        <h4 t-field="o.vendor_id" />
                                    </td>
                                </tr>
                            </thead>
                        </table>    
                        <br/>                
                        <table class="table table-sm o_main_table" name="procument_service">
                            <thead>
                                <tr>
                                    <th name="th_product" class="text-left">
                                        <span>Product</span>
                                    </th>
                                    <th name="th_quantity" class="text-left">
                                        <span>Quantity</span>
                                    </th>
                                    <th name="th_unit_price" class="text-left">
                                        <span>Unit Price</span>
                                    </th>
                                    <th name="th_total" class="text-left">
                                        <span>Total</span>
                                    </th>
                                </tr>
                            </thead>
                            <t t-set="count" t-value="0"/>
                            <t t-foreach="o.order_line_ids" t-as="line">
                                <t t-set="count" t-value="count + 1"/>
                                <tr>
                                    <td>
                                        <span t-field="line.product_id"/>
                                    </td>
                                    <td>
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td>
                                        <span t-field="line.unit_price"/>
                                    </td>
                                    <td>
                                        <span t-field="line.total"/>
                                    </td>
                                </tr>
                            </t>
                            <tr>
                                <td colspan="2">
                                    <strong>Total Detail</strong>
                                </td>
                                <td>
                                   <t t-esc="count"/> 
                                </td>
                            </tr>    
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>